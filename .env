# Configuration de l'environnement de développement
# Don de Sang Application

# ===== API CONFIGURATION =====
# URL de base de l'API (choisir selon votre environnement)
API_BASE_URL=http://127.0.0.1:8000/api
# Alternatives:
# Pour émulateur Android: API_BASE_URL=http://10.0.2.2:8000/api
# Pour appareil physique: API_BASE_URL=http://192.168.1.XXX:8000/api
# Pour production: API_BASE_URL=https://votre-domaine.com/api

API_VERSION=v1
API_TIMEOUT=30

# ===== SÉCURITÉ =====
ENCRYPTION_KEY=blood_donation_app_secure_key_2025
JWT_SECRET=your_jwt_secret_key_here

# ===== ENVIRONNEMENT =====
ENVIRONMENT=development
# Options: development, staging, production

# ===== FONCTIONNALITÉS =====
ENABLE_LOGGING=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true

# ===== SERVICES EXTERNES =====
# Firebase
FIREBASE_SERVER_KEY=your_firebase_server_key_here
FIREBASE_PROJECT_ID=your_firebase_project_id

# Google Maps (si utilisé)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ===== EMAIL CONFIGURATION (Backend) =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=noreply@dondesang.com

# ===== DATABASE (Backend) =====
DATABASE_URL=sqlite:///db.sqlite3
# Pour PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/dondesang

# ===== REDIS (Celery) =====
REDIS_URL=redis://localhost:6379/0

# ===== UPLOADS =====
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_FORMATS=pdf,doc,docx

# ===== SÉCURITÉ DJANGO =====
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,10.0.2.2
